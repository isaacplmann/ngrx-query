{
  "name": "your-awesome-library",
  "version": "0.0.0",
  "license": "MIT",
  "main": "lib/your-awesome-library.js",
  "module": "lib/your-awesome-library.js",
  "jsnext:main": "lib/your-awesome-library.js",
  "types": "lib/your-awesome-library.d.ts",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib && npm run build:demo",
    "build:demo": "rimraf dist/demo && ng build",
    "build:lib": "rimraf dist/lib && ngc && copyfiles package.json README.md LICENSE dist/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "pub": "npm run pub:lib && npm run pub:demo",
    "pub:demo": "npm run build:demo && gh-pages -d dist",
    "pub:lib": "npm run build:lib && npm publish dist",
    "pack:lib": "npm run build:lib && cd dist && npm pack && copyfiles *.tgz ../ && cd .. && rimraf dist/*.tgz"
  },
  "private": false,
  "peerDependencies": {
    "@angular/common": "^2.4.10",
    "@angular/core": "^2.4.10"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0-rc.2",
    "@angular/common": "^2.4.10",
    "@angular/compiler-cli": "^2.4.10",
    "@angular/core": "^2.4.10",
    "@angular/platform-browser": "^2.4.10",
    "@angular/platform-browser-dynamic": "^2.4.10",
    "@angular/router": "^3.4.10",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "copyfiles": "^1.2.0",
    "gh-pages": "0.12.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "rimraf": "^2.6.1",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.1"
  }
}
